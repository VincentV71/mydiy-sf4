{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}

<div class="jumbotron Jumbotron-fluid justify-content-center pt-5">
    <div class="container">
        {% if error %}
        <div class="error_form mb-4">
            {% if invalid_email == true %}
            <ul>
                <li>L'e-mail "{{last_username}}" ne correspond Ã  aucun utilisateur.</li>
            </ul>
            {% else %}
            <ul>
                <li>Ce mot de passe est incorrect.</li>
            </ul>
            {% endif %}
        </div>
        {% endif %}
        <form action="{{ path('login') }}" class="form-control-sm" method="POST">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-left" for="inputEmail">
                    <h5>Email</h5>
                </label>
                <div class="col-sm-10">
                    <input class="form-control" name="_username" placeholder="Entrez votre email" required type="email">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-left" for="inputPassword">
                    <h5>Password</h5>
                </label>
                <div class="col-sm-10">
                    <input class="form-control" name="_password" placeholder="Entrez votre mot de passe"
                        type="password">
                </div>
            </div>
            <div class="row justify-content-center">
                <input type="hidden" name="_target_path" value="{{ path('mydiy') }}" />
                <button
                    class="btn btn-light btn-lg btn-block justify-content-center col-md-4 col-lg-3 col-xl-3 mt-3 mb-3"
                    type="submit" value="Se connecter">Je me connecte</button>
            </div>
        </form>
    </div>
    {# Class CONTAINER #}
</div>
{# Jumbotron #}

{% endblock %}